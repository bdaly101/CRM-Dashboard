<section class="md:grid md:grid-cols-2 h-screen">
    <!-- Contact Information Section -->
    <div class="contact-info">
        <h2 class="text-2xl font-bold">{{first_name}} {{last_name}}</h2>
        <p class="text-md mt-2">{{email}}</p>
        <p class="text-md">{{company}}</p>
        <p class="text-md">{{phone_number}}</p>
    </div>

    <!-- Notes Section -->
    <div class="notes-section bg-slate-300 p-4">
        <h2 class="text-xl font-semibold">Notes</h2>
        <div class="notes-list mt-4">
            {{#each notes as |note|}}
                <div class="note-item mb-2">
                    <p class="note-text">{{note.body}}</p>
                    <button class="delete-note-btn" data-id="{{note.id}}">DELETE</button>
                    <button class="edit-note-btn" data-id="{{note.id}}">Edit</button>
                </div>
            {{/each}}
        </div>
    </div>

<textarea name="" id="" cols="30" rows="10"></textarea>
    <!-- Add Note Section -->
    <div class="add-note mt-4">
        <p class="text-lg font-semibold">Add Note</p>
        <form id="notes-form" class="mt-2" data-contact-id="{{id}}">
            <div class="form-group">
                <label for="note-text" class="form-label">Note:</label>
                <input type="text" id="note-text" name="note-text" class="form-input" />
            </div>
            <div class="form-submit mt-2">
                <button type="submit" id="submit-btn" class="submit-btn">Create</button>
            </div>
        </form>
    </div>
</section>

<script src="/js/singleContact.js"></script>