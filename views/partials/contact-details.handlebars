<div id="contact-list" class="contacts-container">
    <div id="checkbox" class="contact-column flex">
        <input class="checkbox mr-3" type="checkbox" data-number="{{id}}">
        <span class="editbtn">📝</span>
    </div>
    <div id="name" class="contact-column">
        <a href="/contacts/{{id}}">{{first_name}} {{last_name}}</a>
    </div>
    <div id="email" class="contact-column">
        <p>{{email}}</p>
    </div>
    <div id="phone" class="contact-column">
        <p>{{phone_number}}</p>
    </div>
    <div id="company" class="contact-column">
        <p>{{company}}</p>
    </div>
    <div id="last-activity">
        <p>{{last_modified}}</p>
    </div>
</div>